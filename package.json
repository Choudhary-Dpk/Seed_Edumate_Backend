{
  "name": "hubspot-integration-app",
  "version": "1.0.0",
  "description": "Production-ready HubSpot API integration with TypeScript",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
