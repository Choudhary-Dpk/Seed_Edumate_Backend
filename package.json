    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "pm2": "^6.0.8",
    "prisma": "^6.10.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
